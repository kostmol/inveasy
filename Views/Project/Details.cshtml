                    @* { *@
                        <a class="text-muted link-secondary" href="">Category</a>
                    @* } *@
                </div>
                <hr>
                <div class="card-body">
                    <h5 class="card-title">Project Name</h5>
                    <p class="card-text text-muted" style="font-size:15px"><i>@Model.FundAmount / @Model.FundGoal) â‚¬</i></p>
                    <p class="card-text">@Model.Description</p>
                    <p class="card-text"><small class="text-body-secondary">Goal progress:</small></p>
                    <div class="progress" role="progressbar" aria-label="Success striped example" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">
                        <div class="progress-bar progress-bar-striped progress-bar-animated @BarStyle(@Model.FundAmount, @Model.FundGoal ?? 0)" role="progressbar" aria-valuenow=@Model.FundAmount aria-valuemin="0" aria-valuemax=@Model.FundGoal style="width: @(100* @Model.FundAmount/@Model.FundGoal)%"></div>
                    </div>
                </div>
                <div class="card-footer d-flex justify-content-between">
                    <div class="text-muted"> <i class="fa-regular fa-clock"></i> Backers: num</div>
                    <div class="text-muted"> <i class="fa-regular fa-clock"></i> Date posted: DD/MM/YYYY</div>
                </div>
            </div>
        </div>
    </div>
</div>
