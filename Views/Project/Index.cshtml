@model Inveasy.Views.Home.projectModel
@{
    ViewData["Title"] = "Inveasy | Project";
}

<div class="row">
    <div class="d-flex justify-content-start card mb-3">
        <div class="row g-0">
            <div class="col-md-4 p-2 d-flex align-items-center">

                <div id="carouselExampleAutoplaying" class="carousel slide" data-bs-ride="carousel">
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img src="~/images/default_pic.jpg" class="img-fluid rounded-start d-block w-100" alt="...">
                        </div>
                        <div class="carousel-item">
                            <img src="~/images/default_pic.jpg" class="img-fluid rounded-start d-block w-100" alt="...">
                        </div>
                        <div class="carousel-item">
                            <img src="~/images/default_pic.jpg" class="img-fluid rounded-start d-block w-100" alt="...">
                        </div>
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleAutoplaying" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleAutoplaying" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>
            </div>
            <div class="col-md-8 p-2">
                <div class="card-header d-flex justify-content-between ">
                    <a class="text-muted link-secondary" href=""> -by Project creator</a>
                    <a class="text-muted link-secondary" href="">Project Category</a>
                </div>
                <hr>
                <div class="card-body">
                    <h5 class="card-title">Project Name</h5>
                    <p class="card-text text-muted" style="font-size:15px"><i>Amount € / Goal €</i></p>
                    <p class="card-text">Project Descreption</p>
                    <p class="card-text"><small class="text-body-secondary">Goal progress:</small></p>
                    <div class="progress" role="progressbar" aria-label="Success striped example" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">
                        <div class="progress-bar progress-bar-striped bg-secondary" style="width: 25%">25%</div>
                    </div>
                </div>
                <div class="card-footer d-flex justify-content-between">
                    <div class="text-muted"> <i class="fa-regular fa-clock"></i> Backers: num</div>
                    <div class="text-muted"> <i class="fa-regular fa-clock"></i> Date posted: DD/MM/YYYY</div>
                    <div class="text-muted"> <i class="fa-regular fa-clock"></i> Days remaining: XX days</div>
                </div>
            </div>
        </div>
    </div>
</div>
<hr />
<div class="container text-center">
    <div class="row">
        <div class="col">
            <div><h2>Project info</h2></div>
        </div>
        <div class="col">
            <div><h2>Creator Updates</h2></div>
        </div>
    </div>
</div>
<hr />
