@model List<Project>
@{
    ViewData["Title"] = "My Projects | Inveasy";
    List<Project> Projects = ViewData["projects"] as List<Project>;
}

<hr />
<h2 class="text-center">My Projects</h2>
<hr />

<div class="row row-cols-1 row-cols-md-4 g-4">
    @foreach (var project in Projects)
    {
        <div class="col">
            <div class="card">
                <img src="~/images/default_pic.jpg" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">@project.Name</h5>
                    <p class="card-text">@project.Description</p>
                        <a asp-controller="Project" asp-action="Details" asp-route-id=@project.Id class="btn btn-dark">See more</a>
                </div>
            </div>
        </div>
    }
